<style>
  .bubble {
    position: absolute;
    bottom: 0;
    background: transparent;
    box-shadow: inset 0 0 10px rgba(255, 255, 255, 0.5);
    border-radius: 50%;
    animation: float ease-in infinite;
    color: grey;
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    text-align: center;
    z-index: 9999;             
}

@keyframes float {
    0% {
        transform: translate(0, 0);
    }
    100% {
        transform: translate(0, -100vh);
    }
}

</style>

<section class="card1">
